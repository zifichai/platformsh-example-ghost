{
  "server": {
    "socket": "/run/app.sock"
  },
  "database": {
    "client": "mysql",
    "connection": {
      "host": "database.internal",
      "port": "3306",
      "user": "user",
      "database": "main",
      "password": ""
    }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "level": "info",
    "path": "/app/ghost/content/logs/",
    "rotation": {
      "enabled": true,
      "count": 15,
      "period": "1d"
    },
    "transports": ["stdout", "file"]
  },
  "process": "systemd",
  "paths": {
    "contentPath": "/app/ghost/content"
  }
}
